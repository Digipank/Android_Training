<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DisplayAllRecordsActivtity">


   <TextView
       android:id="@+id/txt_title4dispalyall"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Display All Records form DB "
       android:textSize="26sp"
       android:textStyle="bold"
       android:gravity="center_horizontal"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_student_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_title4dispalyall"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>